  <body  class="bg-light">
    <div class="container">
	  <div class="py-5 text-center">
		<img class="d-block mx-auto mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
		
		<p class="lead">Get updates when posted!</p>
	  </div>

	  <div class="row">
		
		<div class="col-md-8 order-md-1 ">
		  
		  <form action="/subscribe"  method="POST">
        <div class="mb-3 " >
          <label for="email">Email <span class="text-muted"> *</span>
          </label>
          <input name="email" type="email" class="form-control" id="email" placeholder="<%-email %>" 
          <% if (email !== "you@example.com") { %>
            value = "<%-email %>" 
          <% } else { %>
              value = "" 
          <% } %>
          required>
          <div class="invalid-feedback" style="width: 100%;">
          Your email is required.
          </div>
        </div>
			
			<div class="row">
			  <div class="col-md-6 mb-3">
				<label for="firstName">First name </label>
				<input name="firstName" type="text" class="form-control" id="firstName" placeholder="<%- firstName %>" value="<%- firstName %>" >
				<div class="invalid-feedback">
				  Valid first name is optional.
				</div>
			  </div>
			  
			  <div class="col-md-6 mb-3">
				<label for="lastName">Last name</label>
				<input name="lastName" type="text" class="form-control" id="lastName" placeholder="<%- lastName %>" value="<%- lastName %>">
				<div class="invalid-feedback">
				  Valid last name is optional.
				</div>
			  </div>
			</div>
			
			
			<hr class="mb-4">
			<button class="btn btn-primary btn-lg btn-block" type="submit">Subscribe!</button>
		  </form>
		</div>
	  </div>

	  <footer class="my-5 pt-5 text-muted text-center text-small">
		<p class="mb-1">&copy; 2017-2020 Company Name</p>
		<ul class="list-inline">
		  <li class="list-inline-item"><a href="#">Privacy</a></li>
		  <li class="list-inline-item"><a href="#">Terms</a></li>
		  <li class="list-inline-item"><a href="#">Support</a></li>
		</ul>
	  </footer>
	</div>
